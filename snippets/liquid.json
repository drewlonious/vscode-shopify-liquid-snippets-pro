{
  "Tag if-": {
    "prefix": "if-",
    "description": "Control flow tag: if (whitespace stripped)",
    "body": ["{%- if ${1:condition} -%}", "\t$2", "{%- endif -%}"]
  },
  "Tag if": {
    "prefix": "if",
    "description": "Control flow tag: if",
    "body": ["{% if ${1:condition} %}", "\t$2", "{% endif %}"]
  },
  "Tag else-": {
    "prefix": "else-",
    "description": "Control flow tag: else (whitespace stripped)",
    "body": ["{%- else -%}", "\t"]
  },
  "Tag else": {
    "prefix": "else",
    "description": "Control flow tag: else",
    "body": ["{% else %}", "\t"]
  },
  "Tag elsif-": {
    "prefix": "elsif-",
    "description": "Control flow tag: elsif (whitespace stripped)",
    "body": ["{%- elsif ${1:condition} -%}", "\t"]
  },
  "Tag elsif": {
    "prefix": "elsif",
    "description": "Control flow tag: elsif",
    "body": ["{% elsif ${1:condition} %}", "\t"]
  },
  "Tag if else-": {
    "prefix": "ifelse-",
    "description": "Control flow tag: if else (whitespace stripped)",
    "body": [
      "{%- if ${1:condition} -%}",
      "\t$2",
      "{%- else -%}",
      "\t$3",
      "{%- endif -%}"
    ]
  },
  "Tag if else": {
    "prefix": "ifelse",
    "description": "Control flow tag: if else",
    "body": [
      "{% if ${1:condition} %}",
      "\t$2",
      "{% else %}",
      "\t$3",
      "{% endif %}"
    ]
  },
  "Tag unless-": {
    "prefix": "unless-",
    "description": "Control flow tag: unless (whitespace stripped)",
    "body": ["{%- unless ${1:condition} -%}", "\t$2", "{%- endunless -%}"]
  },
  "Tag unless": {
    "prefix": "unless",
    "description": "Control flow tag: unless",
    "body": ["{% unless ${1:condition} %}", "\t$2", "{% endunless %}"]
  },
  "Tag case-": {
    "prefix": "case-",
    "description": "Control flow tag: case (whitespace stripped)",
    "body": [
      "{%- case ${1:variable} -%}",
      "\t{%- when ${2:condition} -%}",
      "\t\t$3",
      "\t{%- else -%}",
      "\t\t$4",
      "{%- endcase -%}"
    ]
  },
  "Tag case": {
    "prefix": "case",
    "description": "Control flow tag: case",
    "body": [
      "{% case ${1:variable} %}",
      "\t{% when ${2:condition} %}",
      "\t\t$3",
      "\t{% else %}",
      "\t\t$4",
      "{% endcase %}"
    ]
  },
  "Tag when-": {
    "prefix": "when-",
    "description": "Control flow tag: when (whitespace stripped)",
    "body": ["{%- when ${1:condition} -%}", "$0"]
  },
  "Tag when": {
    "prefix": "when",
    "description": "Control flow tag: when",
    "body": ["{% when ${1:condition} %}", "$0"]
  },
  "Tag cycle-": {
    "prefix": "cycle-",
    "description": "Iteration tag: cycle (whitespace stripped)",
    "body": ["{%- cycle '${1:odd}', '${2:even}' -%}"]
  },
  "Tag cycle": {
    "prefix": "cycle",
    "description": "Iteration tag: cycle",
    "body": ["{% cycle '${1:odd}', '${2:even}' %}"]
  },
  "Tag cycle group-": {
    "prefix": "cyclegroup-",
    "description": "Iteration tag: cycle group (whitespace stripped)",
