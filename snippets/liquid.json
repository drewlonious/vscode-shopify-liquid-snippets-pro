  "Filter size": {
    "prefix": "size",
    "description": "Returns the size of an array or string",
    "body": ["| size"]
  },
  "Filter money": {
    "prefix": "money",
    "description": "Formats a price according to the shop's currency settings",
    "body": ["| money"]
  },
  "Filter money_with_currency": {
    "prefix": "moneycurrency",
    "description": "Formats a price with the currency symbol according to the shop's currency settings",
    "body": ["| money_with_currency"]
  },
  "Filter date": {
    "prefix": "date",
    "description": "Converts a timestamp into another date format",
    "body": ["| date: '${1:%B %d, %Y}'"]
  },
  "Filter default": {
    "prefix": "default",
    "description": "Sets a default value if the input is empty or nil",
    "body": ["| default: ${1:'Default value'}"]
  },
  "Filter escape": {
    "prefix": "escape",
    "description": "Escapes HTML characters in a string",
    "body": ["| escape"]
  },
  "Filter img_url": {
    "prefix": "imgurl",
    "description": "Returns the URL of an image from the product",
    "body": ["| img_url: '${1:medium}'"]
  },
  "Filter json": {
    "prefix": "json",
    "description": "Converts an object into JSON format",
    "body": ["| json"]
  },
  "Filter pluralize": {
    "prefix": "pluralize",
    "description": "Outputs the singular or plural version of a string",
    "body": ["| pluralize: '${1:item}', '${2:items}'"]
  },
  "Filter strip_html": {
    "prefix": "striphtml",
    "description": "Strips all HTML tags from a string",
    "body": ["| strip_html"]
  }
